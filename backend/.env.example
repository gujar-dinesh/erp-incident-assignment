# Storage mode: set to 'true' to use mock storage (no AWS required)
USE_MOCK=false

# AWS Configuration (only needed if USE_MOCK=false)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
DYNAMODB_TABLE_NAME=erp_incidents

# Environment
ENVIRONMENT=development

# RAG Configuration (Optional - enables AI-powered incident enrichment)
USE_RAG=false
OPENAI_API_KEY=your_openai_api_key_here
RAG_CONFIDENCE_THRESHOLD=0.7
RAG_MAX_SIMILAR_INCIDENTS=5

# Force RAG for ALL incidents (not just ambiguous ones)
# When true: RAG is used for every incident (higher cost, better accuracy)
# When false: RAG is used only for ambiguous/unknown cases (cost-effective)
RAG_FORCE_ALL=false

# Vector Database Configuration (for production scaling)
# Options: memory (default, scales to ~50K), pinecone, weaviate, qdrant
VECTOR_DB_TYPE=memory

# Pinecone Configuration (only needed if VECTOR_DB_TYPE=pinecone)
# PINECONE_API_KEY=your_pinecone_api_key
# PINECONE_INDEX_NAME=erp-incidents
# PINECONE_REGION=us-east-1
